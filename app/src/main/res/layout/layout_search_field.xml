<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_search_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/location_search_panel_height"
        android:background="@color/whiteColor"
        android:elevation="@dimen/small_elevation"
        android:padding="@dimen/xxxsmall_spacing">

        <EditText
            android:id="@+id/et_search_text"
            style="@style/SearchField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_spacing"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/location_search_cc"
            android:hint="@string/location_search_hint"
            android:importantForAutofill="no" />

        <ImageView
            android:id="@+id/iv_clear_search_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/clear_search_field_button"
            android:paddingStart="@dimen/medium_spacing"
            android:paddingTop="@dimen/small_spacing"
            android:paddingEnd="@dimen/medium_spacing"
            android:paddingBottom="@dimen/small_spacing"
            android:src="@drawable/ic_clear_grey_500_24dp"
            android:visibility="gone"
            app:tint="@color/contentControlColor"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/medium_spacing"
            android:paddingTop="@dimen/small_spacing"
            android:paddingEnd="@dimen/medium_spacing"
            android:paddingBottom="@dimen/small_spacing"
            android:importantForAccessibility="yes"
            android:src="@drawable/ic_search_grey_500_24dp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/contentControlColor"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/medium_spacing"
            android:paddingTop="@dimen/small_spacing"
            android:contentDescription="@string/filter_options_button"
            android:paddingEnd="@dimen/medium_spacing"
            android:paddingBottom="@dimen/small_spacing"
            android:src="@drawable/ic_filter"
            app:tint="@color/contentControlColor" />

    </LinearLayout>
</layout>
