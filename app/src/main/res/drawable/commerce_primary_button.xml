<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">

        <shape>
            <solid android:color="@color/buttonCommerceDarkColor" />

            <padding android:bottom="@dimen/buttons_top_bottom_bg_padding" android:left="10dp" android:right="10dp" android:top="@dimen/buttons_top_bottom_bg_padding" />
            <corners android:radius="@dimen/button_radius" />

        </shape>

    </item>

    <item android:state_pressed="true">

        <shape>
            <solid android:color="@color/buttonCommercePressed" />

            <corners android:radius="@dimen/button_radius" />
            <padding android:bottom="@dimen/buttons_top_bottom_bg_padding" android:left="10dp" android:right="10dp" android:top="@dimen/buttons_top_bottom_bg_padding" />
        </shape>

    </item>
</selector>
