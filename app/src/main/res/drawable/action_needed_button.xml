<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/buttonActionNeededColor" />
                    <corners android:radius="@dimen/button_radius" />
                    <padding android:bottom="@dimen/buttons_top_bottom_bg_padding" android:left="10dp" android:right="10dp" android:top="@dimen/buttons_top_bottom_bg_padding" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/buttonActionNeededPressedColor" />
                    <corners android:radius="@dimen/button_radius" />
                    <padding android:bottom="@dimen/buttons_top_bottom_bg_padding" android:left="10dp" android:right="10dp" android:top="@dimen/buttons_top_bottom_bg_padding" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
